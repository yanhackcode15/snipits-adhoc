doctype html
html
  include includes/head.pug
  body
    div
      ul
        li 
          a(href="recent") Most Recent Pay Hours
    div
      form(action="/viewHours/" method="post")
        .form-group
          label(for="year") Select Year
          select(class="form-control" id="year" name="year")
            option 2018
            option 2017
        .form-group
          label(for="month") Select Month
          select(class="form-control" id="month" name="month")
            option 12
            option 11
            option 10
            option 9
            option 8
            option 7
            option 6
            option 5
            option 4
            option 3
            option 2
            option 1
        .form-group
          input(type="submit" value="Submit")
